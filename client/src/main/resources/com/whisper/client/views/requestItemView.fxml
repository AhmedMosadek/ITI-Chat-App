<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="800.0" spacing="10.0" styleClass="menu-item" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whisper.client.presentation.controllers.requestItemController">
   <children>
      <ImageView fx:id="notificationIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </ImageView>
      <Label fx:id="header" prefHeight="23.0" prefWidth="570.0" text="You hava a new message from Hassan " textFill="#575757">
         <font>
            <Font name="Corbel Bold" size="20.0" />
         </font>
         <stylesheets>
            <URL value="@../style/style.css" />
            <URL value="@../style/MyCss.css" />
         </stylesheets>
      </Label>
      <Button fx:id="acceptButton" mnemonicParsing="false" prefHeight="34.0" prefWidth="75.0" text="Accept" textFill="WHITE" HBox.hgrow="NEVER">
         <font>
            <Font size="20.0" />
         </font>
         <stylesheets>
            <URL value="@../style/style.css" />
            <URL value="@../style/newCss.css" />
         </stylesheets>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Button>
      <Button fx:id="deleteButton1" layoutX="728.0" layoutY="28.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="75.0" text="Delete" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
         <stylesheets>
            <URL value="@../style/style.css" />
            <URL value="@../style/newCss.css" />
         </stylesheets>
      </Button>
   </children>
   <stylesheets>
      <URL value="@../style/style.css" />
      <URL value="@../style/newCss.css" />
   </stylesheets>
</HBox>
