<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="800.0" styleClass="menu-item" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whisper.client.notification.controller.notificationItemController">
   <children>
      <ImageView fx:id="notificationIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </ImageView>
      <VBox prefHeight="46.0" prefWidth="498.0" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="header" prefHeight="23.0" prefWidth="571.0" text="You hava a new message from Hassan " textFill="#575757">
               <font>
                  <Font name="Corbel Bold" size="20.0" />
               </font>
               <stylesheets>
                  <URL value="@../../style/style.css" />
                  <URL value="@../../style/MyCss.css" />
               </stylesheets>
            </Label>
            <Label fx:id="description" prefHeight="23.0" prefWidth="568.0" text="you have a new message in  conversations from Hassan Kamal " textFill="#575757">
               <font>
                  <Font name="Corbel" size="20.0" />
               </font>
            </Label>
         </children>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </VBox>
      <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="34.0" prefWidth="75.0" text="Delete" textFill="WHITE" HBox.hgrow="NEVER">
         <font>
            <Font size="20.0" />
         </font>
         <stylesheets>
            <URL value="@../../style/style.css" />
            <URL value="@../../style/newCss.css" />
         </stylesheets>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Button>
   </children>
   <stylesheets>
      <URL value="@../../style/style.css" />
      <URL value="@../../style/newCss.css" />
   </stylesheets>
</HBox>
